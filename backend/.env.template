# Business Cost Tracker Environment Configuration
# Copy this file to .env and fill in the values

# App Environment (development, testing, production)
ENVIRONMENT=development

# Security
# Generate a secure random key, for example using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here

# Google OAuth Configuration
# Create these at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Database Configuration
DATABASE_URL=sqlite:///./business_tracker.db
